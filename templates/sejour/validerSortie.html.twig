{% extends 'base.html.twig' %}

{% block title %}Valider la sortie{% endblock %}

{% block body %}

<div class="w-screen h-[calc(100vh-80px)] flex flex-col justify-center items-center ">
    <div class="w-1/3 h-2/3 bg-slate-700 rounded-lg flex flex-col justify-start items-center">
        <div class="w-full flex flex-col items-center rounded-lg">
            <h1 class="text-white text-3xl font-bold w-full text-center bg-slate-500 py-4 rounded-t-lg">Séjour n° {{ leSejour.id }}
            <h1 class="text-white text-2xl font-bold py-4 rounded-t-lg"> Date de début - {{ leSejour.dateDebut|date('d/m/Y') }}
            <h1 class="text-white text-2xl font-bold py-4 rounded-t-lg"> Patient - {{ leSejour.lePatient.nom }}
            <h1 class="text-white text-2xl font-bold py-4 rounded-t-lg"> Lit - {{ leSejour.leLit.libelle }}
        </div>
        
            {{ form_start(formValiderSejour) }}
                <div class="flex flex-col items-center">
                    {{ form_errors(formValiderSejour) }}
                    {{ form_row(formValiderSejour.commentaire) }}
                    {{ form_row(formValiderSejour.estParti) }}
                    <button type="submit" class="text-white bg-slate-500 py-2 px-4 rounded-lg w-fit">Enregistrer</button>
                </div>
            {{ form_end(formValiderSejour) }}
        

</div>

{% endblock %}