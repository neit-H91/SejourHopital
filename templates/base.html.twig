<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <div class="bg-slate-500 h-20 flex flex-row items-center">
            <div class="">
                <a href={{ path("app_principale")}} class="text-white text-2xl px-4 transition ease-in-out duration-500  hover:text-orange-500">Accueil</a>
            </div>
            <div class="">
                {% if is_granted('ROLE_INFIRMIER') %}
                    <a href="{{ path('app_sejour_sorties') }}" class="text-white text-2xl px-4 transition ease-in-out duration-500  hover:text-orange-500">Gérer les sorties</a>
                    <a href={{path('app_sejour_date')}} class="text-white text-2xl px-4 transition ease-in-out hover:text-orange-500 ">Consulter les séjours d'une date</a>
                    <a href={{path('app_sejour_a_venir')}} class="text-white text-2xl px-4 transition ease-in-out hover:text-orange-500 ">Consulter les séjours à venir</a>
                {% endif %}
            </div>

            <div class="ml-auto px-4">
            {% if app.user %}
                <a href={{ path("app_logout")}} class="text-white text-2xl px-4 transition ease-in-out duration-500  hover:text-orange-500">Deconnexion</a>
            {% endif %}
            </div>

        </div>

        {% block javascripts %}
        <script src="https://cdn.tailwindcss.com"></script>
        {% endblock %}

        
    </head>
    <body>
        {% block body %}{% endblock %}
    </body>
</html>
